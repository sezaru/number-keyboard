<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:keyboard="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context="com.davidmiguel.sample.MainActivity">

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:textSize="40sp"
        android:text="0"/>

    <com.davidmiguel.numberkeyboard.NumberKeyboard
        android:id="@+id/numberKeyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        keyboard:keyboardType="custom"
        keyboard:keyWidth="70dp"
        keyboard:keyHeight="70dp"
        keyboard:numberKeyTextSize="30sp"
        keyboard:numberKeyTextColor="@drawable/key_text_blue"
        keyboard:leftAuxBtnBackground="@drawable/key_bg_square"
        keyboard:leftAuxBtnBackground="@drawable/key_bg_square" />

</LinearLayout>
